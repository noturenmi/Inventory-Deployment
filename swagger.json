{
  "openapi": "3.0.0",
  "info": {
    "title": "Inventory Management System API",
    "version": "1.0.0",
    "description": "This API allows you to manage an inventory system, including items, suppliers, categories, and reports. It provides endpoints to create, read, update, and delete inventory items, as well as generate reports and perform searches.",
    "termsOfService": "https://zentinels-inventory-deployment.vercel.app/terms",
    "contact": {
      "name": "API Support Team",
      "email": "support@inventory-api.com",
      "url": "https://zentinels-inventory-deployment.vercel.app/support"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://zentinels-inventory-deployment.vercel.app",
      "description": "Production Server (Vercel)"
    },
    {
      "url": "http://localhost:3000",
      "description": "Local Development Server"
    }
  ],
  "tags": [
    {
      "name": "Items",
      "description": "Operations related to inventory items. Create, read, update, delete, and search items in the inventory.",
      "externalDocs": {
        "description": "Learn more about items",
        "url": "https://docs.inventory-api.com/items"
      }
    },
    {
      "name": "Suppliers",
      "description": "Manage suppliers who provide items. Each item must be associated with a supplier.",
      "externalDocs": {
        "description": "Supplier management guide",
        "url": "https://docs.inventory-api.com/suppliers"
      }
    },
    {
      "name": "Categories",
      "description": "Item category management. Get all available categories or filter items by category."
    },
    {
      "name": "Reports",
      "description": "Inventory analytics and reporting. Get insights about stock levels, values, and low-stock items."
    },
    {
      "name": "Search",
      "description": "Advanced search and filter operations for inventory items."
    },
    {
      "name": "Health",
      "description": "API health checks and status monitoring."
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "API Root",
        "description": "Get API information, version, and available endpoints. Use this as the starting point to explore the API.",
        "tags": ["Info"],
        "responses": {
          "200": {
            "description": "✅ API information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiInfo"
                },
                "example": {
                  "message": "��� Inventory Management API v1.0",
                  "version": "1.0.0",
                  "documentation": "https://zentinels-inventory-deployment.vercel.app/api-docs",
                  "endpoints": {
                    "items": "/api/v1/items",
                    "suppliers": "/api/v1/suppliers",
                    "categories": "/api/v1/categories",
                    "reports": "/api/v1/reports/inventory",
                    "health": "/health"
                  },
                  "status": "operational",
                  "timestamp": "2024-01-15T10:30:00Z"
                }
              }
            }
          }
        }
      }
    },
    
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Check the health status of the API and database connection. Useful for monitoring and uptime checks.",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "✅ API is healthy and operational",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                },
                "example": {
                  "status": "healthy",
                  "service": "Inventory API",
                  "version": "1.0.0",
                  "timestamp": "2024-01-15T10:30:00Z",
                  "uptime": 86400.5,
                  "database": {
                    "status": "connected",
                    "connection": "inventory_db",
                    "host": "cluster.mongodb.net"
                  },
                  "memory": {
                    "rss": "125.8 MB",
                    "heapTotal": "45.2 MB",
                    "heapUsed": "32.1 MB"
                  }
                }
              }
            }
          },
          "503": {
            "description": "⚠️ API is degraded (database disconnected)",
            "content": {
              "application/json": {
                "example": {
                  "status": "degraded",
                  "service": "Inventory API",
                  "database": "disconnected",
                  "timestamp": "2024-01-15T10:30:00Z",
                  "message": "Database connection lost, API running in limited mode"
                }
              }
            }
          }
        }
      }
    },
    
    "/api/v1/items": {
      "get": {
        "summary": "Get all items",
        "description": "Retrieve a paginated list of all inventory items with supplier details. Supports optional query parameters for filtering.",
        "tags": ["Items"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number for pagination (default: 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of items per page (default: 10, max: 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "Field to sort by (name, category, stock, price, createdAt)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["name", "category", "stock", "price", "createdAt"],
              "default": "createdAt"
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "Sort order (asc or desc)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "✅ Items retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ItemsResponse"
                },
                "example": {
                  "success": true,
                  "count": 25,
                  "pagination": {
                    "page": 1,
                    "limit": 10,
                    "totalPages": 3,
                    "totalItems": 25,
                    "hasNext": true,
                    "hasPrev": false
                  },
                  "data": [
                    {
                      "_id": "64f8a1b2c9d3e7f5a2b1c3d4",
                      "name": "Dell XPS 15 Laptop",
                      "category": "Electronics",
                      "stock": 15,
                      "price": 1499.99,
                      "supplier": {
                        "_id": "64f8a1b2c9d3e7f5a2b1c3d5",
                        "name": "Tech Supplies Inc.",
                        "email": "contact@techsupplies.com"
                      },
                      "description": "15-inch laptop with 4K OLED display",
                      "createdAt": "2024-01-10T09:30:00Z",
                      "updatedAt": "2024-01-12T14:20:00Z"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "❌ Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      
      "post": {
        "summary": "Create a new item",
        "description": "Add a new item to the inventory. All fields are required except description. The supplier must exist in the database.",
        "tags": ["Items"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemInput"
              },
              "examples": {
                "laptop": {
                  "summary": "Create a laptop",
                  "value": {
                    "name": "MacBook Pro 16-inch",
                    "category": "Electronics",
                    "stock": 20,
                    "price": 2399.99,
                    "supplier": "64f8a1b2c9d3e7f5a2b1c3d5",
                    "description": "16-inch MacBook Pro with M2 Max chip, 32GB RAM, 1TB SSD"
                  }
                },
                "book": {
                  "summary": "Create a book",
                  "value": {
                    "name": "Clean Code: A Handbook of Agile Software Craftsmanship",
                    "category": "Books",
                    "stock": 50,
                    "price": 39.99,
                    "supplier": "64f8a1b2c9d3e7f5a2b1c3d6",
                    "description": "Software development best practices book by Robert C. Martin"
                  }
                },
                "officeSupply": {
                  "summary": "Create office supply",
                  "value": {
                    "name": "Ergonomic Office Chair",
                    "category": "Office Supplies",
                    "stock": 8,
                    "price": 299.99,
                    "supplier": "64f8a1b2c9d3e7f5a2b1c3d7",
                    "description": "Adjustable ergonomic chair with lumbar support"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "✅ Item created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                },
                "example": {
                  "success": true,
                  "message": "Item created successfully",
                  "data": {
                    "_id": "64f8a1b2c9d3e7f5a2b1c3d8",
                    "name": "MacBook Pro 16-inch",
                    "category": "Electronics",
                    "stock": 20,
                    "price": 2399.99,
                    "supplier": "64f8a1b2c9d3e7f5a2b1c3d5",
                    "description": "16-inch MacBook Pro with M2 Max chip, 32GB RAM, 1TB SSD",
                    "createdAt": "2024-01-15T10:30:00Z",
                    "updatedAt": "2024-01-15T10:30:00Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "❌ Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                },
                "example": {
                  "success": false,
                  "error": "Validation Error",
                  "errors": [
                    {
                      "field": "name",
                      "message": "Item name is required",
                      "value": ""
                    },
                    {
                      "field": "price",
                      "message": "Price must be a positive number",
                      "value": -10
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "❌ Supplier not found",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "error": "Supplier not found",
                  "message": "The specified supplier does not exist in the database"
                }
              }
            }
          }
        }
      }
    },
    
    "/api/v1/items/{id}": {
      "get": {
        "summary": "Get item by ID",
        "description": "Retrieve a specific inventory item by its unique identifier. Returns complete item details including supplier information.",
        "tags": ["Items"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Unique identifier of the item (MongoDB ObjectId)",
            "schema": {
              "type": "string",
              "pattern": "^[0-9a-fA-F]{24}$",
              "example": "64f8a1b2c9d3e7f5a2b1c3d4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "✅ Item found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "❌ Invalid ID format",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "error": "Invalid ID format",
                  "message": "Please provide a valid 24-character hexadecimal ID"
                }
              }
            }
          },
          "404": {
            "description": "❌ Item not found",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "error": "Item not found",
                  "message": "No item found with the specified ID"
                }
              }
            }
          }
        }
      },
      
      "put": {
        "summary": "Update entire item",
        "description": "Replace all fields of an existing item. This is a full update - all fields must be provided.",
        "tags": ["Items"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "✅ Item updated successfully",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Item updated successfully",
                  "data": {
                    "_id": "64f8a1b2c9d3e7f5a2b1c3d4",
                    "name": "Updated Laptop Name",
                    "category": "Electronics",
                    "stock": 25,
                    "price": 1599.99,
                    "supplier": "64f8a1b2c9d3e7f5a2b1c3d5",
                    "description": "Updated description",
                    "createdAt": "2024-01-10T09:30:00Z",
                    "updatedAt": "2024-01-15T11:45:00Z"
                  }
                }
              }
            }
          }
        }
      },
      
      "patch": {
        "summary": "Partially update item",
        "description": "Update specific fields of an item without affecting other fields. Only include the fields you want to update.",
        "tags": ["Items"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ItemPartialUpdate"
              },
              "examples": {
                "updateStock": {
                  "summary": "Update stock only",
                  "value": {
                    "stock": 30
                  }
                },
                "updatePrice": {
                  "summary": "Update price only",
                  "value": {
                    "price": 1299.99
                  }
                },
                "updateMultiple": {
                  "summary": "Update multiple fields",
                  "value": {
                    "stock": 25,
                    "price": 1399.99,
                    "description": "New updated description"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "✅ Item partially updated"
          }
        }
      },
      
      "delete": {
        "summary": "Delete item",
        "description": "Permanently remove an item from the inventory. This action cannot be undone.",
        "tags": ["Items"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "✅ Item deleted successfully",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Item deleted successfully",
                  "deletedId": "64f8a1b2c9d3e7f5a2b1c3d4",
                  "timestamp": "2024-01-15T12:00:00Z"
                }
              }
            }
          },
          "404": {
            "description": "❌ Item not found"
          }
        }
      }
    },
    
