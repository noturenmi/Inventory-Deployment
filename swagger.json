    "/api/v1/search": {
      "get": {
        "summary": "Search and filter items",
        "description": "Advanced search functionality to find items by name, category, or stock range. Supports multiple search criteria.",
        "tags": ["Search"],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search term for item name or category (case-insensitive)",
            "required": false,
            "schema": {
              "type": "string",
              "example": "laptop"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Filter by specific category",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Electronics", "Clothing", "Food", "Books", "General", "Office Supplies"]
            }
          },
          {
            "name": "minStock",
            "in": "query",
            "description": "Minimum stock quantity",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 5
            }
          },
          {
            "name": "maxStock",
            "in": "query",
            "description": "Maximum stock quantity",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 100
            }
          },
          {
            "name": "minPrice",
